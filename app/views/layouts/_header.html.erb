  <header class="navbar navbar-fixed-top">
    <div class="navbar-inner">
	  <div class="container">
	    <%= link_to "ultrakast", root_path, id: "logo" %>
		<nav>
		  <ul class="nav pull-right">
		    <li><%= link_to "Home", root_path %></li>
			<% if user_signed_in? %>
				<li><%= link_to "Users", users_path %></li>
				<% unless current_user.alerts.empty? %>
				<li><%= link_to "Alerts (#{current_user.alerts_count})", "#", :id => "alerts-link", :style => "color: red; font-weight: bold;" %></li>
				<div id="alerts">
				<ul>
				<% current_user.alerts.each do |a| %>
				<li>
					<%= a.content.html_safe %>
				</li>
				<% end %>
				</ul>
				<%= link_to "clear all alerts", :controller => "alerts", :action => "delete_all" %>
				</div>
				<% end %>
				<li id="fat-menu" class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						Account <b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li><%= link_to "Profile", current_user %></li>
						<li><%= link_to "Settings", edit_user_registration_path(current_user) %></li>
						<li class="divider"></li>
						<li><%= link_to "Sign out", destroy_user_session_path, method: "delete" %></li>
					</ul>
				</li>
			<% else %>
				<li><%= link_to "Sign in", new_user_session_path %></li>
			<% end %>
		  </ul>
		</nav>
	  </div><!-- END .container -->
	</div><!-- END .navbar-inner -->
  </header>