html_id = '#comment-list-' + <%= @feed_item.id %>;
$(html_id).html("<%= escape_javascript(render :partial => 'shared/comment', collection: @comments, :locals => { :feed_item => @feed_item }) %>");

$('#new_comment #comment_content').val("");

<% if @feed_item.comments_count == 0 %>
  $('#comments-link-' + <%= @feed_item.id %>).data("link-text", "Comment");
<% else %>
  $('#comments-link-' + <%= @feed_item.id %>).data("link-text", "<%= pluralize(@feed_item.comments_count, 'comment') %>");
<% end %>
