<%= form_for(@post) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :content, placeholder: "Compose new post..." %>
		<%= grouped_collection_select(:post, :category_id, @post.root_category_list, :child_name, :name, :id, :name, { :prompt => "Please choose a category..." }) %>
		<strong>Privacy option:</strong><br /><br />
		
		<%= select(:post, :shared, options_for_select([["Friends Only", false], ["Public", true]])) %>
	</div>
	<%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>