<%= form_for(@post) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :content, placeholder: "Compose new post..." %>
		<%= collection_select(:post, :category_id, @post.category_list, :id, :name) %>
	</div>
	<%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>