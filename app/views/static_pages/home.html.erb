<% if signed_in? %>
    <em>Last login time: <%= session[:prior_login] %></em>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/post_form' %>
			</section>
			<section id="category_links">
				<%= render 'shared/category_links' %>
			</section>
		</aside>
		<div id="feed" class="span8">
			<h3>Newsfeed (viewing friends)</h3>
			<%= link_to 'View everyone', switchfeed_path(:feed_status => "public"), :remote => true %>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>	
	<div class="center hero-unit">
  		<h1>Welcome to Prototype!</h1>
  		<h2>This is a development system and unauthorized access is strictly prohibited!</h2>
  		<%= link_to "Sign in now!", signin_path, class: "btn btn-large btn-primary" %>
		<%= link_to "New user? Sign up!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>
