<%= provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
	  <h1>
	    <%= avatar_for @user %>
		<%= @user.name %><br />
		Friends: <%= @user.friends.count %>
	  </h1>
	  <% if @user == current_user %>
	  <p><%= link_to "Edit profile", edit_user_registration_path(@user) %></p>
	  <% end %>
	</section>
  </aside>
  <div class="span8">
    <% if @user.favorites.any? %>
	<h3>Favorites (<%= @user.favorites.count %>)</h3>
	<ol class="posts">
		<%= render partial: 'shared/feed_item', collection: @feed_items %>
	</ol>
	<% end %>
  </div>  
</div>


